<?php $this->Plugin->unsetId() ?>

<?php if ($this->Plugin->getDetails() != null): ?>
    <div class="gui-field-details-container">
<?php endif ?>
                
<?php foreach ($this->Plugin->getOptions() AS $i => $_option): ?>
    <input id="<?php echo $id . '_' . $i ?>" <?php echo $this->Plugin->getAttributeSet('creator.form.radio') ?> />
    <?php if ($_option['value'] != null): ?>
        <label for="<?php echo $id . '_' . $i ?>"><?php echo $_option['value'] ?></label>
    <?php endif ?>
<?php endforeach ?>
        
<?php if ($this->Plugin->getDetails() != null): ?>
        <div class="gui-details"><?php echo $this->Plugin->getDetails() ?></div>
    </div>
