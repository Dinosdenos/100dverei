<?php if ($this->Error != null): ?>
    <?php echo $this->render('creator/form/error.phtml') ?>
<?php endif ?>

<?php if ($this->Plugin->getId() != null): ?>
    <script>
        $(function(){
            <?php foreach ($this->Plugin->getOptions() AS $i => $_option): ?>
                $('#<?php echo $this->Plugin->getId() ?>_<?php echo $i ?>').styler();
            <?php endforeach ?>
        });
    </script>
<?php endif ?>

