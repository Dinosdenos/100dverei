<script>
    $(function(){
        $('#<?php echo $this->Plugin->getId() ?>').tab(<?php echo $this->Plugin->getOptionsJson() ?>);
        $('#<?php echo $this->Plugin->getId() ?> a:first').tab('show');
    });
</script>


