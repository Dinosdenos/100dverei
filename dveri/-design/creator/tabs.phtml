    <?php endforeach ?>
</ul>

<div class="tab-content">
    <?php foreach ($this->Plugin->getTabs() AS $_tab): ?>
        <div class="tab-pane" id="<?php echo $this->Plugin->getId() ?>_<?php echo $_tab['id'] ?>">
